# Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Application Settings
FLASK_ENV=production
FLASK_DEBUG=False
UPLOAD_DIR=/app/uploads
TRANSCRIPT_DIR=/app/transcripts

# Server Settings
HOST=0.0.0.0
PORT=5000

# Notion Integration
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Google Drive Integration (Obsidian Vault用)
# Google Drive APIを使用して保存（NAS環境でも動作、マウント不要）
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id_here
GOOGLE_DRIVE_CREDENTIALS_PATH=./credentials.json
GOOGLE_DRIVE_TOKEN_PATH=./token.json

# Email Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=nas.system.0828@gmail.com

# Email Dedupe (seconds)
# 同一宛先+同一ファイル名の短時間重複送信を抑止するTTL（秒）
# 必要に応じて調整。省略時は600秒（10分）
EMAIL_DEDUPE_WINDOW_SECONDS=600

# Subfolder Support (Optional)
# Nginx Proxy Manager経由でサブフォルダ（/meetings）でアクセスする場合に設定
# 内部ネットワークから直接アクセスする場合は設定不要（空欄のまま）
# SUBFOLDER_PATH=/meetings
