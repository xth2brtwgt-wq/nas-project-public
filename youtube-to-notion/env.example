# YouTube要約システム - 環境変数テンプレート
# このファイルをコピーして .env を作成し、実際の値を設定してください
# .env.restoreはバックアップ用として作成することを推奨します（実行時には使用しない）

# ===========================================
# 必須設定
# ===========================================

# Gemini API設定（必須）
GEMINI_API_KEY=your_gemini_api_key_here

# アプリケーション設定
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# サーバー設定
HOST=0.0.0.0
PORT=8110

# ディレクトリ設定
UPLOAD_DIR=./data/uploads
OUTPUT_DIR=./data/outputs
CACHE_DIR=./data/cache
LOG_DIR=./logs

# ===========================================
# Notion連携（オプション）
# ===========================================

# Notion設定
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# ===========================================
# 外部API（オプション）
# ===========================================

# Claude API（要約生成の代替）
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# 処理設定
# ===========================================

# 最大動画時間（秒）
MAX_VIDEO_DURATION=7200

# 音声品質設定
AUDIO_QUALITY=128

# 要約長さ設定
SUMMARY_LENGTH=medium

# ===========================================
# ログ設定
# ===========================================

# ログレベル
LOG_LEVEL=INFO

# ログファイル設定
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=3

# Subfolder Support (Optional)
# Nginx Proxy Manager経由でサブフォルダ（/youtube）でアクセスする場合に設定
# 内部ネットワークから直接アクセスする場合は設定不要（空欄のまま）
# SUBFOLDER_PATH=/youtube
